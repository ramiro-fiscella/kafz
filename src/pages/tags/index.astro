---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts: any = await Astro.glob('../posts/*.md');
const tags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
];
const pageTitle: string = 'Tag Index';
---

<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>
<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: solid 1px #333;
    border-radius: 3px;
    padding: 0.5rem 1rem;
    font-size: 1.15em;
  }

  .dark .tag a {
    color: #aaa;
  }
  .dark .tag {
    color: #aaa;
    border: solid 1px #ebddde;
  }
</style>
