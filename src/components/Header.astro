---
import Navigation from './Navigation.astro';
import Hamburger from './Hamburger.astro';
---

<header>
  <div class="header-container">
    <a href="/" title="the whale blog"
      ><img
        src="data:image/png;base64,"
      />
      <span> the whale blog </span>
    </a>
    <nav>
      <Hamburger />
      <Navigation />
    </nav>
  </div>
</header>

<script>
  import '../scripts/menu.ts';
</script>

<style>
  a {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 800;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  a:visited {
    color: cadetblue;
  }
  a:hover,
  a:focus {
    color: teal;
    transition-duration: 2s;
  }
  a:not(:focus) {
    transition-duration: 2s;
  }

  @media screen and (max-width: 600px) {
    span {
      opacity: 0;
    }
  }
</style>
